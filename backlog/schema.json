{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Unit",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "PENDING",
        "IN_PROGRESS",
        "IN_REVIEW",
        "DONE"
      ]
    },
    "spec": {
      "type": "string"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tests_required": {
      "type": "boolean"
    }
  },
  "required": [
    "id",
    "status",
    "spec",
    "dependencies",
    "tests_required"
  ]
}