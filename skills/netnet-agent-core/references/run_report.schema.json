{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NetNetRunReport",
  "type": "object",
  "required": [
    "work_order_id",
    "status",
    "deliverables_completed",
    "acceptance_results",
    "changed_files"
  ],
  "additionalProperties": false,
  "properties": {
    "work_order_id": {
      "type": "string",
      "minLength": 3
    },
    "status": {
      "type": "string",
      "enum": ["completed", "blocked", "partial"]
    },
    "deliverables_completed": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "acceptance_results": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "passed"],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string"
          },
          "passed": {
            "type": "boolean"
          },
          "evidence": {
            "type": "string"
          }
        }
      }
    },
    "changed_files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "summary"],
        "additionalProperties": false,
        "properties": {
          "path": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          }
        }
      }
    },
    "blockers": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "next_actions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
